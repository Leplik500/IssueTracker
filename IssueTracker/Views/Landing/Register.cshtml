@model dynamic

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<form action="#"
      id="registerForm">
    <fieldset>
        <p>
            <label for="firstName"> First Name</label>
            <input id="firstName"
                   name="firstName"
                   type="text"/>
        </p>
        <p>
            <label for="lastName"> Last Name</label>
            <input id="lastName"
                   name="lastName"
                   type="text"/>
        </p>
        <p>
            <label for="email"> Email*</label>
            <input id="email"
                   name="email"
                   pattern="[^@@\s]+@@[^@@\s]+\.[^@@\s]+"
                   required
                   title="Email must contain @@,. and domen"
                   type="email"/>
        </p>
        <p>
            <label for="password"> Password*</label>
            <input id="password"
                   name="password"
                   required
                   type="password"/>
        </p>
        <p>
            <label for="confirmPassword"> Password*</label>
            <input id="confirmPassword"
                   name="confirmPassword"
                   required
                   type="password"/>
        </p>
        <p>
            <label for="age"> Age*</label>
            <input id="age"
                   name="age"
                   required
                   type="number"/>
        </p>
        <p>
            Already have an account?
            <a asp-action="Login"
               asp-controller="Landing"
               class="link">
                Login
            </a>
        </p>
        <button id="createUser">
            Register
        </button>
    </fieldset>
</form>

@section Scripts {
    <script src="~/js/register.js"></script>
}